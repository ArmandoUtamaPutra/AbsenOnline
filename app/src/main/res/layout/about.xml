<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckglay"

>

    <TableLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginTop="100dp"
                 android:orientation="vertical">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/factory"
                android:layout_marginTop="20dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="About"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000"
        />

        <TableRow>
            <TextView
                    android:text="Nama Perusahaan"
                    android:id="@+id/namaperusahaan"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:text="PT.Sentosa Maju"
                    android:id="@+id/pt.sentosa"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>


        </TableRow>

        <TableRow>
            <TextView
                    android:text="Email"
                    android:textColor="#fff"
                    android:id="@+id/emailabout"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:text="Sentosa@gmail.com"
                    android:textColor="#fff"
                    android:id="@+id/sentosaemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>


        </TableRow>

        <TableRow>
            <TextView
                    android:text="Telpon"
                    android:textColor="#fff"
                    android:id="@+id/telpon1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:text="0838988221102"
                    android:textColor="#fff"
                    android:id="@+id/telpon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>


        </TableRow>

        <TableRow>
            <TextView
                    android:text="Alamat"
                    android:textColor="#fff"
                    android:id="@+id/alamat"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:text="Jln.Veteran 2 kawasan Industri"
                    android:textColor="#fff"
                    android:id="@+id/alamat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"/>


        </TableRow>


    </TableLayout>





</android.support.constraint.ConstraintLayout>